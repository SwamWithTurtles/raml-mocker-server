#%RAML 0.8
title: TEST_Definition
version: v1
mediaType: application/json
schemas:
  - objectDef : !include schemas/objectDefinition.json

/example-literal:
  description: Response from the example
  get:
    responses:
      200:
        body:
          example: |
            {"test": "test"}

/schema-first:
  description: Has both schema first and then example
  get:
    responses:
      200:
        body:
          schema: objectDef
          example: |
            {"test": "test"}

/example-first:
  description: Has both example first and then schema
  get:
    responses:
      200:
        body:
          example: |
            {"test": "test"}
          schema: objectDef


/generated-values:
    get:
        description: |
          This method gets the objectDef
        responses:
          200:
            body:
              schema: objectDef

/example-json:
  get:
    description: |
      Render JSON example
    responses:
      200:
        body:
          application/json:
            example: !include examples/example.json

/parameter/{id}:
  description: Get the same response for different values of the parameter
  get:
    responses:
      200:
        body:
          example: |
            {"test": "test"}

/nested:
    /foo:
      get:
        responses:
          200:
            body:
              example: |
                {"value": "foo"}
    /bar:
      get:
        responses:
          200:
            body:
              example: |
                {"value": "bar"}

/post:
  post:
    description: |
      This method post to create a new objectDef returning a 201 code
    responses:
      201:
        body:
          example: |
            {"test": "test"}

